# Complete staging proxy configuration for all services
# Generated by Ansible for staging.mdubiel.org environment
# This configuration handles all staging subdomains with HTTPS

# Upstream definitions for all services
upstream beryl3_app {
    server beryl3-webapp:8000;
    keepalive 32;
}

upstream grafana {
    server grafana:3000;
}

upstream prometheus {
    server prometheus:9090;
}

upstream loki {
    server loki:3100;
}

upstream adminer {
    server adminer:8080;
}

upstream docker_registry {
    server docker-registry:5000;
}

# HTTP to HTTPS redirect for all staging subdomains
server {
    listen 80;
    server_name 
        beryl3.staging.mdubiel.org
        grafana.staging.mdubiel.org
        prometheus.staging.mdubiel.org
        loki.staging.mdubiel.org
        adminer.staging.mdubiel.org
        registry.staging.mdubiel.org
        monitoring.staging.mdubiel.org;
    
    # Allow Let's Encrypt challenges
    location /.well-known/acme-challenge/ {
        root /var/www/html;
        try_files $uri =404;
    }
    
    # Redirect everything else to HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

# HTTPS - Beryl3 Application
server {
    listen 443 ssl;
    http2 on;
    server_name beryl3.staging.mdubiel.org;

    # SSL Configuration
    ssl_certificate /etc/nginx/ssl/fullchain.pem;
    ssl_certificate_key /etc/nginx/ssl/privkey.pem;
    
    # Modern SSL configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;
    
    # Security headers
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Frame-Options DENY;
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";
    add_header Referrer-Policy "strict-origin-when-cross-origin";

    # Client upload limit
    client_max_body_size 10M;

    location / {
        proxy_pass http://beryl3_app;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
        
        # WebSocket support
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_buffering off;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Logging
    access_log /var/log/nginx/beryl3.staging.mdubiel.org_access.log;
    error_log /var/log/nginx/beryl3.staging.mdubiel.org_error.log;
}

