# Environment variables for {{ project_name }}
# Django Core Settings
SECRET_KEY={{ project_defaults.django_secret_key }}
DEBUG={{ project_defaults.django_debug | lower }}
ALLOWED_HOSTS={{ project_config.domain }},localhost,127.0.0.1,{{ project_name }}-nginx

# Database Configuration
DATABASE_URL=postgresql://{{ project_defaults.db_user | regex_replace('project_name', project_name) }}:{{ project_defaults.db_password }}@postgres:5432/{{ project_defaults.db_name | regex_replace('project_name', project_name) }}

# Cache Configuration
REDIS_URL=redis://redis:6379/0

# Email Configuration
EMAIL_BACKEND={{ project_defaults.email_backend }}
EMAIL_HOST={{ project_defaults.email_host }}
EMAIL_PORT={{ project_defaults.email_port }}
EMAIL_USE_TLS={{ project_defaults.email_use_tls | lower }}
DEFAULT_FROM_EMAIL={{ project_defaults.email_from }}

# Static and Media Files
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/{{ project_name }}.log

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
X_FRAME_OPTIONS=DENY

# Application-specific settings
ENVIRONMENT=staging
SENTRY_DSN=  # Add Sentry DSN if using error tracking

# Beryl3 specific settings
APPLICATION_ACTIVITY_LOGGING=True
USE_INBUCKET=True

# Monitoring
PROMETHEUS_METRICS_ENABLED=True
METRICS_PORT={{ project_config.metrics_port | default('8001') }}