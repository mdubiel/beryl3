{
  "dashboard": {
    "id": null,
    "title": "Beryl3 Application Logs",
    "tags": ["beryl3", "logs", "application"],
    "style": "dark",
    "timezone": "",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Beryl3 Log Count (Last Hour)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(count_over_time({service_name=\"beryl3\"}[1h]))",
            "legendFormat": "Total Log Lines",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          }
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "title": "Beryl3 Error Count (Last Hour)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(count_over_time({service_name=\"beryl3\", severity=\"error\"}[1h]))",
            "legendFormat": "Error Count",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          }
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 10
                },
                {
                  "color": "red",
                  "value": 50
                }
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 3,
        "title": "Beryl3 Log Rate by Logger",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum by (logger) (rate({service_name=\"beryl3\"}[5m]))",
            "legendFormat": "{{logger}}",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        },
        "options": {
          "legend": {
            "calcs": [],
            "displayMode": "list",
            "placement": "bottom",
            "showLegend": true
          },
          "tooltip": {
            "mode": "single",
            "sort": "none"
          }
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisCenteredZero": false,
              "axisColorMode": "text",
              "axisLabel": "",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "insertNulls": false,
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "pointSize": 5,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "never",
              "spanNulls": false,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "title": "Beryl3 Errors and Warnings",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate({service_name=\"beryl3\", severity=\"error\"}[5m]))",
            "legendFormat": "Errors",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          },
          {
            "expr": "sum(rate({service_name=\"beryl3\", severity=\"warning\"}[5m]))",
            "legendFormat": "Warnings",
            "refId": "B",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
